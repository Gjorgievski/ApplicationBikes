@model IEnumerable<ApplicationBike.DomainModel.Bike>

@{
    ViewBag.Title = "Index";
}



<p>
    @using (Html.BeginForm("Index", "Bike", FormMethod.Get))
    {
    <br />
    <p>
        Register Number: @Html.TextBox("SearchRegNumber")
        Producer: @Html.TextBox("SearchProducer")
        Colour: @Html.TextBox("SearchColour")
        <input type="submit" value="Filter" />
    </p>
    <br />
    <br />
    }
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.RegNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Producer)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Model)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Colour)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.RegNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Producer)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Model)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Colour)
        </td>
    </tr>
}

</table>

@if (ViewBag.HasPrevious) { 

    @Html.ActionLink("<<<", "Index", new { id=(ViewBag.PageIndex - 1)})
    
 }
 

@if (ViewBag.HasNext) { 

    @Html.ActionLink(">>>", "Index", new { id=(ViewBag.PageIndex + 1)})
    
}